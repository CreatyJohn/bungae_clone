<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".src.main.category.big.middle.ManPaddingActivity"
    android:background="@color/whitegray">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ll_appbar"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_go_back"
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:layout_marginStart="20sp"
            android:layout_marginBottom="15sp"
            android:background="@drawable/circle_ripple_effect"
            android:scaleType="centerCrop"
            android:src="@drawable/left_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_local_buying"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginBottom="15sp"
            android:letterSpacing="-0.06"
            android:text="카테고리"
            android:textColor="@color/black"
            android:textSize="18.5sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_go_back" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80sp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_appbar">

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:letterSpacing="-0.03"
            android:text="@string/all"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/arrow10"
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:layout_marginStart="3sp"
            android:layout_marginEnd="3sp"
            android:src="@drawable/ic_chevron_right_lightgray"
            app:layout_constraintBottom_toBottomOf="@+id/forbutton"
            app:layout_constraintStart_toEndOf="@id/tv_2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3sp"
            android:layout_marginTop="20sp"
            android:letterSpacing="-0.03"
            android:text="@string/man"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/arrow10"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/arrow11"
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:layout_marginStart="3sp"
            android:layout_marginEnd="3sp"
            android:src="@drawable/ic_chevron_right_lightgray"
            app:layout_constraintBottom_toBottomOf="@+id/forbutton"
            app:layout_constraintStart_toEndOf="@id/tv_7"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3sp"
            android:layout_marginTop="20sp"
            android:letterSpacing="-0.03"
            android:text="패딩/점퍼"
            android:textColor="@color/candyredtrue"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/arrow11"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/forbutton"
            android:layout_width="match_parent"
            android:layout_height="0.5sp"
            android:layout_margin="20sp"
            android:background="@color/whitegray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_long_padding"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="200sp"
            android:layout_height="20sp"
            android:layout_margin="20sp"
            android:background="@drawable/botnav_ripple_effect"
            android:gravity="start"
            android:letterSpacing="-0.01"
            android:text="롱패딩"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/forbutton" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_short_padding"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="200sp"
            android:layout_height="20sp"
            android:layout_margin="20sp"
            android:background="@drawable/botnav_ripple_effect"
            android:gravity="start"
            android:letterSpacing="-0.01"
            android:text="숏패딩"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_long_padding" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_blue"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="200sp"
            android:layout_height="20sp"
            android:layout_margin="20sp"
            android:background="@drawable/botnav_ripple_effect"
            android:gravity="start"
            android:letterSpacing="-0.01"
            android:text="블루종/항공점퍼"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_short_padding" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_etc"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="200sp"
            android:layout_height="20sp"
            android:layout_margin="20sp"
            android:background="@drawable/botnav_ripple_effect"
            android:gravity="start"
            android:letterSpacing="-0.01"
            android:text="기타(패딩/점퍼)"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_blue" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>