<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".src.main.category.ChooseCategoryActivity"
    android:background="@color/whitegray">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ll_appbar"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_go_back"
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:layout_marginStart="20sp"
            android:layout_marginBottom="15sp"
            android:background="@drawable/circle_ripple_effect"
            android:scaleType="centerCrop"
            android:src="@drawable/left_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_local_buying"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginBottom="15sp"
            android:letterSpacing="-0.06"
            android:text="카테고리"
            android:textColor="@color/black"
            android:textSize="18.5sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_go_back" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_section1"
        android:layout_width="match_parent"
        android:layout_height="260sp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_appbar">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/since"
            android:textColor="@color/gray"
            android:textSize="15sp"
            android:layout_margin="20sp"
            android:letterSpacing="-0.03"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5sp"
            android:layout_margin="20sp"
            android:background="@color/whitegray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="400sp"
        android:layout_marginTop="15sp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_section1">

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:letterSpacing="-0.03"
            android:text="@string/all"
            android:textColor="@color/gray"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/forbutton"
            android:layout_width="match_parent"
            android:layout_height="0.5sp"
            android:layout_margin="20sp"
            android:background="@color/whitegray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_woman"
            android:layout_width="200sp"
            android:layout_height="20sp"
            android:layout_margin="20sp"
            android:text="여성의류"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:letterSpacing="-0.01"
            android:gravity="start"
            android:background="@drawable/botnav_ripple_effect"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/forbutton"
            style="?android:attr/borderlessButtonStyle" />
        
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chevron_right_lightgray"
            android:layout_margin="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/forbutton"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_man"
            android:layout_width="200sp"
            android:layout_height="20sp"
            android:layout_margin="20sp"
            android:text="남성의류"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:letterSpacing="-0.01"
            android:gravity="start"
            android:background="@drawable/botnav_ripple_effect"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_woman"
            style="?android:attr/borderlessButtonStyle" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/arrow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chevron_right_lightgray"
            android:layout_margin="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/arrow"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_shoes"
            android:layout_width="200sp"
            android:layout_height="20sp"
            android:layout_margin="20sp"
            android:text="신발"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:letterSpacing="-0.01"
            android:gravity="start"
            android:background="@drawable/botnav_ripple_effect"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_man"
            style="?android:attr/borderlessButtonStyle" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/arrow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chevron_right_lightgray"
            android:layout_margin="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/arrow1"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_bag"
            android:layout_width="200sp"
            android:layout_height="20sp"
            android:layout_margin="20sp"
            android:text="가방"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:letterSpacing="-0.01"
            android:gravity="start"
            android:background="@drawable/botnav_ripple_effect"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_shoes"
            style="?android:attr/borderlessButtonStyle" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/arrow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chevron_right_lightgray"
            android:layout_margin="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/arrow2"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>